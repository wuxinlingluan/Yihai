<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBgColor"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whiteBgColor"
        android:orientation="vertical">

        <LinearLayout
            style="@style/style_recycle_item_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/image_size_small3"
                android:layout_height="@dimen/image_size_small3"
                android:src="@drawable/ic_goods_shelves" />

            <TextView
                style="@style/style_recycle_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tip_goods_shelf" />

            <Spinner
                android:id="@+id/spn_goods_shelf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:background="@null"
                android:dropDownHorizontalOffset="50dp"
                android:dropDownVerticalOffset="30dp"
                android:gravity="right"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <include layout="@layout/view_divider_item" />

        <LinearLayout
            style="@style/style_recycle_item_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/image_size_small3"
                android:layout_height="@dimen/image_size_small3"
                android:src="@drawable/ic_goods_layer" />

            <TextView
                style="@style/style_recycle_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tip_goods_layer" />

            <Spinner
                android:id="@+id/spn_goods_floor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:dropDownHorizontalOffset="50dp"
                android:dropDownVerticalOffset="30dp"
                android:gravity="right"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <include layout="@layout/view_divider_item" />

        <LinearLayout
            style="@style/style_recycle_item_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/image_size_small3"
                android:layout_height="@dimen/image_size_small3"
                android:src="@drawable/ic_goods_location" />

            <TextView
                style="@style/style_recycle_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tip_goods_location" />

            <Spinner
                android:id="@+id/spn_goods_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:dropDownHorizontalOffset="50dp"
                android:dropDownVerticalOffset="30dp"
                android:gravity="right"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <include layout="@layout/view_divider_item" />

        <LinearLayout
            style="@style/style_recycle_item_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/image_size_small3"
                android:layout_height="@dimen/image_size_small3"
                android:src="@drawable/ic_material" />

            <TextView
                style="@style/style_recycle_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tip_material" />

            <Spinner
                android:id="@+id/spn_material"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:dropDownHorizontalOffset="50dp"
                android:dropDownVerticalOffset="30dp"
                android:gravity="right"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <include layout="@layout/view_divider_item" />

        <LinearLayout
            style="@style/style_recycle_item_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/image_size_small3"
                android:layout_height="@dimen/image_size_small3"
                android:src="@drawable/ic_goods_right" />

            <TextView
                style="@style/style_recycle_text_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/tip_goods_right" />

            <Spinner
                android:id="@+id/spn_goods_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:dropDownHorizontalOffset="50dp"
                android:dropDownVerticalOffset="30dp"
                android:gravity="right"
                android:spinnerMode="dropdown" />
        </LinearLayout>

        <include layout="@layout/view_divider_item" />

        <LinearLayout
            style="@style/style_recycle_item_padding"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_width="@dimen/image_size_small3"
                android:layout_height="@dimen/image_size_small3"
                android:src="@drawable/ic_goods_alias" />

            <TextView
                style="@style/style_recycle_text_title"
                android:layout_width="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_height="wrap_content"
                android:text="@string/tip_plan_name" />

            <EditText
                android:id="@+id/et_plan_name"
                style="@style/style_edit_null"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:hint="@string/hint_plan_name"
                android:maxEms="40" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/windowBgColor" />

    <include layout="@layout/view_divider_line" />

    <LinearLayout
        android:id="@+id/view_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/slt_btn_normal"
        android:gravity="center"
        android:minHeight="@dimen/bar_action_height">

        <ImageView
            android:layout_width="@dimen/image_size_small2"
            android:layout_height="@dimen/image_size_small2"
            android:src="@drawable/ic_in_ok" />

        <TextView
            style="@style/style_recycle_text_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/view_margin_normal1"
            android:text="@string/action_make"
            android:textSize="@dimen/text_size_normal1" />

    </LinearLayout>
</LinearLayout>