<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="JzAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:actionBarStyle">@style/JzAppTheme.AppBarOverlay</item>
        <item name="toolbarStyle" tools:ignore="NewApi">@style/MyToolBar</item>
        <item name="android:windowBackground">@color/color_null</item>
        <item name="android:windowIsTranslucent">true</item>
        <!--<item name="android:textColorPrimary">@color/white</item>-->
    </style>
    <style name="style_medium_font">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
    </style>
    <style name="JzAppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.NoActionBar" />

    <style name="MyToolBar" parent="Widget.AppCompat.Toolbar">
        <!--左边边距-->
        <item name="contentInsetStart">0dp</item>
    </style>

    <!--toolbar style-->
    <style name="style_view_bar_padding">
        <item name="android:paddingLeft">@dimen/view_margin_normal1</item>
        <item name="android:paddingRight">@dimen/view_margin_normal1</item>
        <item name="android:minHeight">@dimen/toolbar_min_height</item>
    </style>

    <!--主页 item-->
    <style name="style_main_item_padding">
        <item name="android:layout_marginLeft">@dimen/view_margin_normal1</item>
        <item name="android:layout_marginTop">@dimen/view_margin_normal1</item>
        <item name="android:layout_marginRight">@dimen/view_margin_normal1</item>
    </style>

    <!--普通toolbar item-->
    <style name="style_normal_toolbar_item_padding">
        <item name="android:paddingLeft">@dimen/view_margin_normal2</item>
        <item name="android:paddingRight">@dimen/view_margin_normal2</item>
        <item name="android:paddingTop">@dimen/view_margin_normal1</item>
        <item name="android:paddingBottom">@dimen/view_margin_normal1</item>
        <item name="android:layout_marginLeft">@dimen/view_margin_small1</item>
        <item name="android:layout_marginRight">@dimen/view_margin_small1</item>
    </style>

    <!--普通Recycle item-->
    <style name="style_recycle_item_padding">
        <item name="android:paddingLeft">@dimen/view_margin_big2</item>
        <item name="android:paddingRight">@dimen/view_margin_big2</item>
        <item name="android:paddingTop">@dimen/view_margin_normal3</item>
        <item name="android:paddingBottom">@dimen/view_margin_normal3</item>
        <item name="android:background">@color/whiteBgColor</item>
    </style>

    <style name="style_recycle_text_title">
        <item name="android:textSize">@dimen/text_size_normal1</item>
        <item name="android:textColor">@color/textBlackColor</item>
        <item name="android:paddingLeft">@dimen/view_margin_normal3</item>
    </style>

    <style name="style_recycle_text_content">
        <item name="android:textSize">@dimen/text_size_normal1</item>
        <item name="android:textColor">@color/textHintColor</item>
        <item name="android:paddingLeft">@dimen/view_margin_normal3</item>
    </style>

    <!--edit 无背景-->
    <style name="style_edit_null">
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/text_size_normal1</item>
        <item name="android:textColor">@color/textBlackColor2</item>
        <item name="android:textColorHint">@color/inputHintColor</item>
        <item name="android:layout_marginLeft">@dimen/view_margin_normal3</item>
    </style>

    <style name="style_login_edit">
        <item name="android:background">@null</item>
        <item name="android:layout_width">175dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/inputHintColor</item>
        <item name="android:textSize">@dimen/text_size_small3</item>
        <item name="android:layout_marginLeft">@dimen/view_margin_normal2</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="style_view_line_login_edit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/size_divider_line</item>
        <item name="android:background">@color/dividerColorDark</item>
        <item name="android:layout_marginTop">@dimen/view_margin_normal3</item>
    </style>

    <style name="style_normal_font">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>
    <!-- CustomNotificationBar title text -->
    <style name="CustomNotificationBarTitleText">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
    <style name="CustomNotificationBarText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
    </style>
    <!--Style for all the screens. Contains default margins -->
    <style name="base_layout_style">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="style_small_font">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>
</resources>
